<!DOCTYPE html>
<html>
<head>
  <title>HeyPico LLM + Maps</title>
  <script>
    function showLoading() {
      document.getElementById('loading').style.display = 'block';
      document.getElementById('submitBtn').disabled = true;
    }
  </script>
</head>
<body>
  <h1>Temukan Tempat dengan AI + Google Maps</h1>

  <form method="get" action="/ask" onsubmit="showLoading()">
    <input type="text" name="q" placeholder="Contoh: Tempat makan enak di Bandung" size="40" required />
    <button type="submit" id="submitBtn">Cari</button>
  </form>

  <div id="loading" style="display:none; margin-top: 20px;">
    <strong>‚è≥ Sedang mencari tempat dengan bantuan AI...</strong>
  </div>

  <% if (llm_answer) { %>
    <h2>Jawaban dari AI:</h2>
    <p><%= llm_answer %></p>
  <% } %>

  <% if (places && places.length > 0) { %>
    <h2>Tempat yang Direkomendasikan:</h2>
    <ul>
      <% places.forEach(function(place) { %>
        <li>
          <strong><%= place.name %></strong><br>
          <a href="<%= place.maps_link %>" target="_blank">üìç Buka di Google Maps</a>
        </li>
      <% }); %>
    </ul>
  <% } %>
</body>
</html>
